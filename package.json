{
  "name": "nodejs-boilerplate",
  "description": "A boilerplate fullstack created in nodejs",
  "keywords": [
    "express",
    "passport"
  ],
  "version": "1.0.0",
  "author": "toannt181@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=10.11.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon server.js",
    "debug": "cross-env NODE_ENV=development nodemon --debug server.js",
    "test": "cross-env NODE_ENV=test babel-tape-runner test/test-*.js",
    "pretest": "eslint .",
    "lint": "eslint .",
    "prod": "pm2-runtime start ecosystem.config.js --env production",
    "parcel": "parcel assets/scss/main.scss -d public/assets",
    "parcel:prod": "parcel build assets/scss/main.scss -d public/assets",
    "db:refresh": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "nodemonConfig": {
    "ignore": [
      "assets/*",
      "public/*",
      "crawling/*",
      "migrations/*",
      "public/*"
    ],
    "watch": [
      "app/*",
      "config/*",
      "server.js"
    ],
    "delay": "0"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "jsx-a11y/anchor-is-valid": "off",
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^3.0.7",
    "body-parser": "~1.19.0",
    "chalk": "^3.0.0",
    "compression": "~1.7.4",
    "connect-mongo": "~2.0.3",
    "cookie-parser": "~1.4.4",
    "cors": "~2.8.5",
    "cross-env": "~5.2.0",
    "csurf": "~1.10.0",
    "date-fns": "^2.8.1",
    "dotenv": "~8.0.0",
    "express": "~4.17.0",
    "express-session": "^1.16.2",
    "flash": "^1.1.0",
    "googleapis": "^39.2.0",
    "helmet": "~3.18.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.8.7",
    "morgan": "~1.9.1",
    "multer": "~1.4.1",
    "mysql2": "^2.0.0",
    "nodemailer": "^6.4.2",
    "notifier": "~0.2.0",
    "parcel": "^1.12.4",
    "passport": "^0.4.1",
    "passport-github": "~1.1.0",
    "passport-google-oauth": "~2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-linkedin": "~1.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "~1.0.4",
    "pm2": "~3.5.1",
    "pug": "^2.0.4",
    "react-router": "^5.1.2",
    "react-router-redux": "^4.0.8",
    "redis": "^2.8.0",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "session-file-store": "^1.3.1",
    "sharp": "^0.24.0",
    "socket.io": "^2.3.0",
    "uuid": "^3.4.0",
    "view-helpers": "~0.2.0",
    "winston": "~3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "~10.0.1",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "~4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "~3.1.0",
    "nodemon": "1.19.0",
    "sass": "^1.22.10"
  }
}